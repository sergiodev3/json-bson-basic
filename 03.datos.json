{
  "ejemplos_json": {
    
    "ejemplo_1_tipos_basicos": {
      "descripcion": "JSON soporta 6 tipos de datos básicos",
      "datos": {
        "nombre": "María García",
        "edad": 28,
        "altura": 1.65,
        "activo": true,
        "apodo": null,
        "ciudad": "Madrid"
      },
      "nota": "String (texto), Number (números), Boolean (true/false), Null (sin valor)"
    },

    "ejemplo_2_estructuras_anidadas": {
      "descripcion": "JSON permite anidar objetos y arrays",
      "datos": {
        "usuario": "jperez",
        "perfil": {
          "nombre_completo": "Juan Pérez",
          "edad": 35,
          "contacto": {
            "email": "juan@example.com",
            "telefono": "+34612345678"
          }
        },
        "hobbies": ["programación", "música", "deportes"],
        "idiomas": [
          {
            "idioma": "Español",
            "nivel": "Nativo"
          },
          {
            "idioma": "Inglés",
            "nivel": "Avanzado"
          }
        ]
      },
      "nota": "Los arrays usan [] y pueden contener cualquier tipo. Los objetos usan {} y contienen pares clave-valor"
    },

    "ejemplo_3_documento_mongodb": {
      "descripcion": "Estructura típica para MongoDB (que usa BSON internamente)",
      "datos": {
        "_id": "507f1f77bcf86cd799439011",
        "producto": "Laptop Dell XPS 15",
        "precio": 1299.99,
        "disponible": true,
        "categorias": ["electrónica", "computadoras", "portátiles"],
        "especificaciones": {
          "procesador": "Intel i7",
          "ram": "16GB",
          "almacenamiento": "512GB SSD",
          "pantalla": "15.6 pulgadas"
        },
        "reviews": [
          {
            "usuario": "user123",
            "puntuacion": 5,
            "comentario": "Excelente producto",
            "fecha": "2026-01-15"
          },
          {
            "usuario": "user456",
            "puntuacion": 4,
            "comentario": "Muy buena, pero cara",
            "fecha": "2026-02-10"
          }
        ],
        "stock": 45,
        "fecha_creacion": "2026-01-01T10:00:00Z"
      },
      "nota": "En BSON este documento sería más eficiente: _id sería ObjectId, fecha_creacion sería Date (no string), y números tendrían tipos específicos (Int32, Double, etc.)"
    }
  },

  "diferencias_json_vs_bson": {
    "json": {
      "formato": "Texto plano legible",
      "tipos": "6 tipos básicos (String, Number, Object, Array, Boolean, Null)",
      "tamaño": "Más grande (texto)",
      "velocidad": "Más lento de parsear",
      "uso": "Intercambio de datos, APIs REST, configuración"
    },
    "bson": {
      "formato": "Binario (no legible directamente)",
      "tipos": "Más de 20 tipos (Date, ObjectId, Int32, Int64, Binary, Timestamp, etc.)",
      "tamaño": "Más compacto (binario)",
      "velocidad": "Más rápido de parsear y procesar",
      "uso": "MongoDB, almacenamiento interno de documentos"
    },
    "ejemplo_conversion": {
      "json_fecha": "2026-02-16",
      "bson_fecha_seria": "ISODate('2026-02-16T00:00:00Z')",
      "json_id": "507f1f77bcf86cd799439011",
      "bson_id_seria": "ObjectId('507f1f77bcf86cd799439011')"
    }
  }
}